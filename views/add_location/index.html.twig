{% extends 'layout.html.twig' %}

{% block customstylesheets %}

{% endblock %}

{% block customjavascript %}
{% endblock %}

{% block menu %}
    {% include 'menu.html.twig' with {restaurant:'active', clients:'open', orders:'open', stats:'', staff:'open'} %}
{% endblock %}

{% block content %}

    <div class="main" id="addLocationPage">

        <div class="container">

            <div class="row">

                <div class="span12">

                    <div class="widget stacked ">

                        <div class="widget-header">
                            <i class="icon-pencil"></i>

                            <h3 data-i18n="addLocationPage.title"></h3>
                        </div>
                        <!-- /widget-header -->

                        <div class="widget-content">
                            {% include 'assets/loader.html.twig'  with { 'oneAjaxOnPage': true, 'divId' : 'addLocationForm'} %}
                            {% include 'assets/messages.html.twig' with { 'message': message, 'error': error} %}

                            <form id="add-staff" class="form-horizontal" method="POST" action="/admin/add_location">
                                <fieldset>
                                    {{ form }}
                                    <div class="form-actions">
                                        <button type="submit" class="btn btn-medium btn-primary" data-i18n="common.buttons.save_changes"></button>
                                    </div> <!-- /form-actions -->
                                </fieldset>
                            </form>
                            </div>
                        </div>
                        <!-- /widget-content -->

                    </div>
                    <!-- /widget -->

                </div>
                <!-- /span12 -->

            </div>
            <!-- /row -->

        </div>
        <!-- /container -->
    </div> <!-- /main -->
{% endblock %}