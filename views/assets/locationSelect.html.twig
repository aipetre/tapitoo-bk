<div class="row">
    <div class="span12">
        <div class="widget stacked">
            <div class="widget-header">
                <h3 data-i18n="common.title.selectLocation"></h3>
            </div>
            <div class="widget-content">
                {% include 'assets/loader.html.twig'  with { 'divId' : 'StatusRestaurantLocation', 'datai18n': "common.labels.loading"} %}
                {% include 'assets/messages.html.twig' with { 'divId': "StatusRestaurantLocation",'error': error} %}
                <select id="selectLocation">
                    {% if globals.type == "chainmanager" %}
                    <option value="" data-i18n="common.labels.selectLocation"></option>
                    {% endif %}
                    {% for key,location in view.locations  %}
                    <option value="{{ location.locationId }}">{{ location.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    </div>
</div>
<div id="locationContent"></div>